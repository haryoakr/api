    <body id="page-top">
        <!-- Navigation-->
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top " id="mainNav">
            <div class="container">
                <a class="navbar-brand" style="font-weight: lighter;" href="#page-top">VOCABULARY <span style="font-weight: bold;">QUIZ</span></a>
                <button class="navbar-toggler" type="button" number-bs-toggle="collapse" number-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    Menu
                    <i class="fas fa-bars ms-1"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav text-uppercase ms-auto py-4 py-lg-0">
                        <li class="nav-item"><a class="nav-link" href="/quiz">QUIZ</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        
        
        <br>
        <!-- Contact-->
        <section class="page-section" id="faq">
            <div class="container">
                <div class="text-center">
                    <h2 class="section-heading text-uppercase">QUIZ <%= data_min %> - <%= data_max %> (<%= data_lang %>)</h2>
                </div>

                <%  var arr = [];
                  var min = data_min-1;
                  var max = data_max;
                  while(arr.length < 40){
                      var r = Math.floor(Math.random() * max) + 1;
                      if(arr.indexOf(r) === -1) if(r > min) arr.push(r);
                  }
                %>


                <% arr.forEach(function(number) { %>

                    <% data_vocabularies.forEach(function(vocab) { if(vocab.number == number) { %>
                    <% if(data_lang == 'eng') { %>
                    <li>
                       <input type="text" disabled="" value="<%= vocab.english_word %>"> 
                       <input class="true_answer" type="hidden" value="<%= vocab.indonesia_word %>"> 
                       <input class="answer" type="text" name="answer"> 
                       <span class="hint" style="visibility: hidden;"><%= vocab.indonesia_word %></span>
                    </li>
                    <% } else { %>
                    <li>
                       <input type="text" disabled="" value="<%= vocab.indonesia_word %>"> 
                       <input class="true_answer" type="hidden" value="<%= vocab.english_word %>"> 
                       <input class="answer" type="text" name="answer"> 
                       <span class="hint" style="visibility: hidden;"><%= vocab.english_word %></span>
                    </li>
                    <% }}}); %>

                <% }); %>

                <button class="xl" onclick="check()">CHECK</button>

            </div>
        </section>


        <script>
            function check() {
                var elements = document.getElementsByClassName("hint");
                var answers = document.getElementsByClassName("answer");
                var true_answers = document.getElementsByClassName("true_answer");
                for (var i = elements.length - 1; i >= 0; i--) {
                           elements[i].style.visibility = "visible";
                           if (true_answers[i].value.includes(answers[i].value) && answers[i].value) {
                            elements[i].style.color = "green";
                            answers[i].disabled = true;
                           }else{
                            elements[i].style.color = "red";
                           }
                       }       
            }
        </script>
        
    
       
       
        
